<?php

  $spec
  ->name('pomander')
  ->authors('Mike Kruk <tamagokun@gmail.com>')
  ->homepage('http://github.com/tamagokun/pomander')
  ->version('0.1.0')
  ->phpVersion('>=5.3.1')
  ->summary('A command line tool for deploying PHP applications')
  ->description('Pomander is a PHP-based command line tool for deploying applications. It is inspired by Rake/Capistrano, and is built on top of the Rake clone, Phake.')
  ->files('lib/**','bin/**')
  ->includePath('lib')
  ->executables('bin/pom','bin/pomify')
  ;
?>
